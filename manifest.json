{
    "manifest_version": 3,
    "name": "Slack Markdown Exporter",
    "version": "1.0",
    "description": "Экспортирует заданное количество последних сообщений Slack-диалога в формате Markdown с сохранением форматирования.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://app.slack.com/*"
            ],
            "js": [
                "content.js"
            ],
            "css": [
                "style.css"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://app.slack.com/*"
    ]
}
