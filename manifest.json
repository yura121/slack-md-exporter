{
    "manifest_version": 3,
    "name": "Slack Markdown Exporter",
    "version": "1.0",
    "description": "Exports a specified number of the latest Slack messages from a dialogue into Markdown format, keeping the formatting.",
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://app.slack.com/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://app.slack.com/*",
        "http://localhost:5173/*"
    ]
}
